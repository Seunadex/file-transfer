<h4>Uploads</h4> <%= link_to "New Upload", new_upload_path %>
<table class="table table-hover">
    <% if @files.any? %>
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Filename</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
      <% @files.each do |file| %>
        <tr>
          <td><%= file[:title] %></td>
          <td><%= file[:filename] %></td>
          <td><%= link_to "Download", rails_blob_path(file[:file], disposition: 'attachment'), class: "" %></td>
          <td><%= link_to 'Delete', upload_path(file[:id]), method: :delete, data: {confirm: "Are you sure you want to delete this file?"}, class: 'btn btn-danger btn-sm download'  %></td>
        </tr>
      <% end %>
  </tbody>
    <% else %>
      <h4>No file uploaded yet!</h4>
    <% end %>
</table>